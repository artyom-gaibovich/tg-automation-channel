generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String
  channels       UserChannel[]
  rewrittenPosts RewrittenPost[]
  subscription   Subscription?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model UserChannel {
  id                String    @id @default(uuid())
  telegramId        String
  title             String
  user              User      @relation(fields: [userId], references: [id])
  userId            String
  category          Category? @relation(fields: [categoryId], references: [id])
  categoryId        String?
  channelsToRewrite String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Category {
  id        String        @id @default(uuid())
  name      String
  prompt    String
  channels  UserChannel[]
  createdAt DateTime      @default(now())
}

model Post {
  id         String         @id @default(uuid())
  telegramId String
  messageId  Int
  content    String
  createdAt  DateTime       @default(now())
  rewritten  RewrittenPost?
}

model RewrittenPost {
  id         String   @id @default(uuid())
  original   Post     @relation(fields: [originalId], references: [id])
  originalId String   @unique
  content    String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
}

model Subscription {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  tier       String
  usagePosts Int      @default(0)
  postLimit  Int
  validUntil DateTime
  createdAt  DateTime @default(now())
}

model Transcribation {
  id        String   @id @default(uuid())
  fileName  String?
  content   String?  @db.Text
  code      String?
  createdAt DateTime @default(now())
  order Int? @default(0)
}
